<UserControl x:Class="Xaml.DataGrid.Issue.Views.Home"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Xaml.DataGrid.Issue.Views"
             mc:Ignorable="d" 
             xmlns:igDP="http://infragistics.com/DataPresenter"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <Style x:Key="actionStrip" TargetType="{x:Type igDP:CellValuePresenter}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type igDP:CellValuePresenter}">
                        <Grid>
                            <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                Visibility="Hidden"
                                x:Name="ActionButtons"
                                Margin="2">
                                <Button Width="25"
                            Height="25"
                            Padding="0"
                            ToolTip="View Parameters"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                                    Click Me
                                </Button>
                            </StackPanel>
                        </Grid>
                        <!-- Trigger to show on hover -->
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ActionButtons" Property="Visibility" Value="Visible" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <igDP:XamDataGrid x:Name="XamDataGrid1"
                              AutoFit="True" 
                              IsGroupByAreaExpanded="False"
                              DataSource="{Binding LineItems, UpdateSourceTrigger=PropertyChanged}">
                                    <igDP:XamDataGrid.FieldLayoutSettings>
                                        <igDP:FieldLayoutSettings AllowFieldGroupCollapsing="True"
                                      AllowAddNew="False"
                                      AllowFieldMoving="Yes"
                                      AllowDelete="False"
                                      HeaderPrefixAreaDisplayMode="Menu"
                                      AllowClipboardOperations="All"
                                      AutoGenerateFields="False" />
                                    </igDP:XamDataGrid.FieldLayoutSettings>
                                    <igDP:XamDataGrid.FieldLayouts>
                                        <igDP:FieldLayout>
                                            <igDP:Field Label="Item SKU"
                                            AllowEdit="False"
                                            AllowRecordFiltering="True"
                                            Name="Sku" />
                                                                        <igDP:Field Label="Item Desc"
                                            AllowEdit="False"
                                            AllowRecordFiltering="True"
                                            Name="Description" />
                                                                        <igDP:Field Label="Item Brand"
                                            AllowEdit="False"
                                            AllowRecordFiltering="True"
                                            Name="Brand" />
                                                                        <igDP:DateTimeField Label="Modified  Date"
                                             HorizontalContentAlignment="Right"
                                             Format="MM/dd/yyyy hh:mm:ss tt"
                                             AllowEdit="False"
                                             AllowRecordFiltering="True"
                                             AllowGroupBy="False"
                                             Visibility="Collapsed"
                                             Name="ModifiedDate" />
                                            <igDP:Field Name="Id" Label="Action">
                                                <igDP:Field.Settings>
                                                    <igDP:FieldSettings CellValuePresenterStyle="{StaticResource actionStrip}" />
                                                </igDP:Field.Settings>
                                            </igDP:Field>
                                        </igDP:FieldLayout>
                                    </igDP:XamDataGrid.FieldLayouts>
                                </igDP:XamDataGrid>
                           
</UserControl>
