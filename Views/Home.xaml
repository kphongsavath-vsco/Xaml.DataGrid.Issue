                                             AllowEdit="False"
                                             AllowRecordFiltering="True"
                                             AllowGroupBy="False"
                                             Visibility="Collapsed"
                                             Name="ModifiedDate" />
                                            <igDP:Field Name="Id" Label="Action">
                                                <igDP:Field.Settings>
                                                    <igDP:FieldSettings CellValuePresenterStyle="{StaticResource actionStrip}" />
