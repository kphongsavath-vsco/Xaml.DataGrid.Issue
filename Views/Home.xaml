                                        <igDP:FieldLayoutSettings AllowFieldGroupCollapsing="True"
                                      AllowAddNew="False"
                                      AllowFieldMoving="Yes"
                                      AllowDelete="False"
                                      HeaderPrefixAreaDisplayMode="Menu"
                                      AllowClipboardOperations="All"
                                      AutoGenerateFields="False" />
                                    </igDP:XamDataGrid.FieldLayoutSettings>
                                    <igDP:XamDataGrid.FieldLayouts>
                                        <igDP:FieldLayout>
                                            <igDP:Field Label="Item SKU"
                                            AllowEdit="False"
                                            AllowRecordFiltering="True"
                                            Name="Sku" />
                                                                        <igDP:Field Label="Item Desc"
                                            AllowEdit="False"
                                            AllowRecordFiltering="True"
                                            Name="Description" />
                                                                        <igDP:Field Label="Item Brand"
                                            AllowEdit="False"
                                            AllowRecordFiltering="True"
                                            Name="Brand" />
